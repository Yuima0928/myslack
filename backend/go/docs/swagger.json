    "definitions": {
        "handlers.AddMemberIn": {
            "type": "object",
            "required": [
                "user_id"
            ],
            "properties": {
                "role": {
                    "description": "役割（未指定は member）",
                    "type": "string",
                    "enum": [
                        "owner",
                        "member"
                    ],
                    "example": "member"
                },
                "user_id": {
                    "description": "追加するユーザのUUID",
                    "type": "string",
                    "example": "6d4c2f52-1f1c-4e7d-92a2-4b2d4a3d9a10"
                }
            }
        },
        "handlers.CreateChannelIn": {
            "type": "object",
            "required": [
                "name"
            ],
            "properties": {
                "is_private": {
                    "description": "プライベートかどうか",
                    "type": "boolean",
                    "example": false
                },
                "name": {
                    "description": "チャンネル名",
                    "type": "string",
                    "example": "general"
                }
            }
        },
        "handlers.CreateWorkspaceIn": {
            "type": "object",
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "description": "ワークスペース名",
                    "type": "string",
                    "example": "my-team"
                }
            }
        },
        "handlers.MsgCreateIn": {
            "type": "object",
            "required": [
                "text"
            ],
            "properties": {
                "parent_id": {
                    "description": "追加: 返信先（UUID文字列）",
                    "type": "string"
                },
                "text": {
                    "type": "string",
                    "minLength": 1
                }
            }
        },
        "handlers.MsgOut": {
            "type": "object",
            "properties": {
                "channel_id": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "parent_id": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "thread_root_id": {
                    "type": "string"
                },
                "user_id": {
                    "type": "string"
                },
                "workspace_id": {
                    "type": "string"
                }
            }
        },
        "handlers.SignUpIn": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "display_name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string",
                    "minLength": 4
                }
            }
        },
        "handlers.TokenOut": {
            "type": "object",
            "properties": {
                "access_token": {
                    "type": "string"
                },
                "token_type": {
                    "type": "string"
                }
            }
        },
        "handlers.WorkspaceMemberRow": {
            "type": "object",
            "properties": {
                "display_name": {
                    "type": "string",
                    "example": "Alice"
                },
                "email": {
                    "type": "string",
                    "example": "alice@example.com"
                },
                "role": {
                    "type": "string",
                    "example": "owner"
                },
                "user_id": {
                    "type": "string",
                    "example": "6d4c2f52-1f1c-4e7d-92a2-4b2d4a3d9a10"
                }
            }
        },
        "model.Workspace": {
            "type": "object",
            "properties": {
                "createdAt": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}